mixin filters(filters)
	.filters
		each filter in filters
			.filters-item.js-filter
				.filters-item-head.crsor-trgr.mouse(
					data-cursor-type="plus"
					data-scrambler
				)
					span.filters-item-head__text.js-data-scrambler-item!= filter.title
					
					span.filters-item-head__icon
						<svg width="18" height="12" viewBox="0 0 18 12" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M6.42857 0H9.85714H16C16.824 0 17.2944 0.940764 16.8 1.6L9.8 10.9333C9.4 11.4667 8.6 11.4667 8.2 10.9333L1.2 1.6C0.705573 0.940764 1.17595 0 2 0H6.42857Z" fill="currentcolor"/>
						</svg>

				ul.filters-item-body.js-filter-body
					each item, index in filter.items
						li.js-list-item.filters-item-body__item.crsor-trgr.mouse(
							data-cursor-type="plus"
						)
							input.filters-item-check(
								type="radio"
								name=`${filter.radio}`
								value=`${item.value}`
								checked= (index === 0)
							)

							.filters-item-body__icon
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M23.6486 3.53899C23.1799 3.07034 22.4202 3.07034 21.9515 3.53899L7.57474 17.9159L2.04855 12.3897C1.57995 11.921 0.820195 11.9211 0.351492 12.3897C-0.117164 12.8583 -0.117164 13.6181 0.351492 14.0867L6.72621 20.4613C7.19468 20.9299 7.95499 20.9296 8.42327 20.4613L23.6486 5.23605C24.1172 4.76745 24.1172 4.00765 23.6486 3.53899Z" fill="#FFE176"/>
								</svg>

							.filters-item-body__text!= item.title